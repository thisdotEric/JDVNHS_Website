<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=1024' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <link rel='stylesheet' href='/css/main.css' />
    <link rel='stylesheet' href='/css/side-nav.css' />

    <title> {{{title}}} </title>
  </head>
  <body>

    {{#unless login}}
      <div class='side-nav'>

        <div class='school-logo'>
          <img
            src='/img/login/logo school.png'
            width='150'
            height='150'
            alt=''
          />

          <div class='links'>

            {{#each links}}
              <div class='link' id='{{setActive selected}}'>
                <a id='url' href='{{url}}'>{{name}}</a>
              </div>
            {{/each}}

          </div>
        </div>

        <div class='user'>
          <p>John Eric Siguenza</p>
          <a id='signout' href='/'>Sign out</a>

        </div>
      </div>

      <div class='header'>
        <p>{{{header}}}</p>

      </div>

    {{/unless}}

    <main>
      {{{body}}}
    </main>

  </body>
</html>