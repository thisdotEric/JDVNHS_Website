<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=1024' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <link rel='icon' type='image/png' href='/img/favicon.png' />
    <link rel='stylesheet' href='/css/main.css' />
    <link rel='stylesheet' href='/css/side-nav.css' />
    <script src='/js/setAPI.js'></script>
    <link
      href='https://unpkg.com/gridjs/dist/theme/mermaid.min.css'
      rel='stylesheet'
    />
    <script src='https://unpkg.com/gridjs/dist/gridjs.production.min.js'>
    </script>

    <title> {{{title}}} </title>
  </head>
  <body>
    {{#unless login}}
      <div class='side-nav'>

        <div class='school-logo'>
          <img
            src='/img/login/logo school.png'
            width='150'
            height='150'
            alt=''
          />

          <div id='select-subject'>
            <a href='/teacher/dashboard'>Select Subject</a>
            <hr />
            <p><span id='selected-label'>Selected:
              </span>
              {{selectedSubject}}</p>

          </div>

          <div class='links'>

            {{#each links}}
              <div class='link' id='{{setActive selected}}'>
                <a id='url' href='{{url}}'>{{name}}</a>
              </div>
            {{/each}}

          </div>
        </div>

        <div class='user'>
          <p>Koloda Mikhaylov Novikov</p>

          <form action='/logout' method='POST'>
            <input id='signout' type='submit' value='Sign out' />
          </form>

        </div>
      </div>

      <div class='header'>
        <p>{{{header}}}</p>

        <p id='err'>{{{error}}}</p>

      </div>

    {{/unless}}

    <main>
      {{{body}}}
    </main>

  </body>
  <script src='/js/close-error.js'></script>

</html>